.container
	position relative
	height 100vh
	overflow hidden
	lost-utility clearfix


.drawer
	font-size font-size-normal
	lost-column 4/12 12 0
	height 100vh
	overflow auto

	.profile
		background-color drawer-strong
		text-align center

		h1
			text-transform uppercase
			margin-bottom 0

		h2.role
			font-family 'Noto Sans', sans-serif
			color color-primary
			margin-top .1rem

		.picture
			position relative

			img
				width 60%
				border-radius 50%
				margin 5rem 18% 2rem

			.flag
				position absolute
				bottom 0
				right 0
				width 14%
				border .3rem solid black

		.country
			font-size font-size-normal
			position relative
			color color-primary
			font-weight normal
			padding-left 1.5rem
			font-style italic
			display inline-block
			margin-top 1rem
			font-weight 100

			&:before
				content ""
				position absolute
				left 0
				top -0.1rem
				width 1.5rem
				height 1.5rem
				background-image url('/images/country.png')
				background-repeat no-repeat

		.cells
			lost-utility clearfix

			.cell
				padding 15px 0
				lost-column 1/3 3 0
				box-sizing border-box
				border-right border-setup
				border-top border-setup
				border-bottom border-setup
				text-align center

				span
					vertical-align middle
					strong
						font-size font-size-big

				&:last-child
					border-right none

.main-content
	font-size font-size-small
	lost-column 8/12 12 0
	height 100vh
	overflow auto
	box-sizing border-box
	padding 10px 5%

