.main-content
	font-size font-size-big
	lost-column 8/12 12 0
	height 100vh
	overflow auto
	box-sizing border-box
	padding 10px 5%

	+below(480px)
		lost-column 1/1 1 0
		overflow visible
		height auto

	#menu
		img
			width 3rem
			height 3rem

	h2,h3
		color color-secondary

	h1
		margin 30px 0
		font-size font-size-huge

	.about-list
		li
			margin-bottom 1rem
		li:before
			content '\2666'
			margin-right 15px
	.languages
		margin 1.8rem 0
		lost-utility: clearfix;
		img
			lost-column 1/3 0
			max-width 140px
	.world-map
		margin 2rem 0
		lost-utility clearfix
		border border-setup
		box-shadow 7px 3px 20px 2px border-color;
		img
			lost-column 1/1
	.places
		span
			padding 1.5rem
			position relative
			&.living:before
				content ""
				position absolute
				left 0
				width 1.5rem
				top 1.39rem
				height 1.5rem
				background-image url('../images/red-marker.png')
				background-repeat no-repeat
			&.visited:before
				content ""
				position absolute
				left 0
				width 1.5rem
				height 1.5rem
				background-image url('../images/blue-marker.png')
				background-repeat no-repeat

	.skillset
		li
			text-align center
			display inline-block
			white-space nowrap
			margin 3%
			padding-left 2rem
			position relative
			&:before
				content ""
				position absolute
				left 0
				top -0.2rem
				width 1.5rem
				height 1.5rem
				background-image url('../images/check.png')
				background-size contain
				background-repeat no-repeat
